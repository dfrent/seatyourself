<h1>New Restaurant</h1>

<p>
<% @restaurant.errors.full_messages.each do |error| %>
  <%= error %>
<% end %>
</p>

<%= form_for @restaurant do |f| %>
  <div class="field">
    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>
  </div>

  <div class="field">
    <p><%= f.label :location %></p>
    <p><%= f.text_field :location %></p>
  </div>

  <div class="field">
    <p><%= f.label :capacity %></p>
    <p><%= f.number_field :capacity %></p>
  </div>

  <div class="field">
    <p><%= f.label :open_time %></p>
    <p><%= f.time_field :open_time %></p>
  </div>

  <div class="field">
    <p><%= f.label :close_time %></p>
    <p><%= f.time_field :close_time %></p>
  </div>

  <div class="field">
    <p><%= f.label :max_reservation_size %></p>
    <p><%= f.number_field :max_reservation_size %></p>
  </div>

  <div class="field">
    <p><%= f.submit  %></p>
  </div>
<% end %>
