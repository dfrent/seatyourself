<h1>Make a Reservation</h1>

<p>
<% @reservation.errors.full_messages.each do |error| %>
  <%= error %>
<% end %>
</p>

<%= form_for @reservation, url: restaurant_reservations_path(@restaurant) do |f| %>
  <div class="field">
    <p><%= f.label :time %></p>
    <p><%= f.select(:time, @restaurant.available_times) %></p>
  </div>

  <div class="field">
    <p><%= f.label :date %></p>
    <p><%= f.date_field :date %></p>
  </div>

  <div class="field">
    <p><%= f.label :size %></p>
    <p><%= f.number_field :size %></p>
  </div>

  <div class="field">
    <p><%= f.submit  %></p>
  </div>
<% end %>
